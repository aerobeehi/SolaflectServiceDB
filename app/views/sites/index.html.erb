<h1>Site</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Site SN</th>
      <th>Firmware Version</th>
      <th>Service Status</th>    
      <th>Number of Logs</th>
      <th>Last Update</th>     
    </tr>
  </thead>
  <tbody>
    <% if @sites.count == 0 %>
      <tr>
        <td colspan="6">
          No sites found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @sites.each do |site| %>
      
        <% if site.sitestatus == "Service" %>      
            <tr class = "danger">
              <td><%= link_to "#{site.name}", site %></td>
              <td><%= site.firmware %> </td>
              <td><%= site.servicestatus%></td>    
              <td><%= site.logs.count %></td>
              <td><%= site.updated_at %></td>    
            </tr>
        <% else %>
            <tr class = "default">
              <td><%= link_to "#{site.sn}", site %></td>
              <td><%= site.firmware %> </td>
              <td><%= site.servicestatus %></td>     
              <td><%= site.logs.count %></td>
              <td><%= site.updated_at %></td> 
              </td>
            </tr>
        <% end %>
        
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="well">
<%= link_to "New Site", new_site_path, class: "btn btn-default " %>
</div>


 
<% case params[:animal]
when "dog" %>
<p>Barf!</p>
<% when "cat" %>
<p>Meow!</p>
<% end %>
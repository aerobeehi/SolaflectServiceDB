<%= bootstrap_form_for(@machine, layout: :horizontal)  do |f| %>
    <%= f.text_field :sn, label: "Serial Number", placeholder: "Enter a serial number.", label_col: "col-sm-2", control_col: "col-sm-3"  %>
    <%= f.select(:box_id, @box_options, label_col: "col-sm-2", control_col: "col-sm-3") %> 
  
<%= f.form_group do %>
    <div class="well col-md-4" >
      <%= f.submit class: "btn btn-default" %>    
      <%= link_to "Cancel", machines_path(@machine), class: "btn btn-default" %>
    </div>
 <% end %>
<% end %>


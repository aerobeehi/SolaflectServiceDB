<h2>Log In</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
  
  <%= f.text_field :username %>

  <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? %>
   <%= f.form_group do %>
    <%= f.check_box :remember_me %>
   <% end %>
  <% end %>
    
 <%= f.form_group do %>
  <%= f.submit "Log In" %>
<% end %>
 
 <%= f.form_group do %>
 <%= render "devise/shared/links" %>
 <% end %>

<% end %>
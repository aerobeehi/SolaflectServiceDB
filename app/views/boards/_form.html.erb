<%= bootstrap_form_for(@board, layout: :horizontal )  do |f| %>
    <%= f.text_field :sn, label: "Serial Number", placeholder: "Enter five digit serial number.", label_col: "col-md-2", control_col: "col-sm-3" %>
    <%= f.text_field :firmware, label: "Firmware Version", placeholder: "Enter version xx.xx.xx", label_col: "col-sm-2", control_col: "col-md-3" %>


<%= f.form_group do %>
    <div class="well col-md-4" >
      <%= f.submit class: "btn btn-default" %>    
      <%= link_to "Cancel", boards_path(@board), class: "btn btn-default" %>
    </div>
 <% end %>
<% end %>

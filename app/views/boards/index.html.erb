<h1>Boards</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Board SN</th>
      <th>Firmware Version</th>
      <th>Service Status</th>    
      <th>Number of Logs</th>
      <th>Last Update</th>     
    </tr>
  </thead>
  <tbody>
    <% if @boards.count == 0 %>
      <tr>
        <td colspan="6">
          No boards found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @boards.each do |board| %>
      
        <% if board.servicestatus == "Service" %>      
            <tr class = "danger">
              <td><%= link_to "#{board.sn}", board %></td>
              <td><%= board.firmware %> </td>
              <td><%= board.servicestatus%></td>    
              <td><%= board.logs.count %></td>
              <td><%= board.updated_at %></td>    
            </tr>
        <% else %>
            <tr class = "default">
              <td><%= link_to "#{board.sn}", board %></td>
              <td><%= board.firmware %> </td>
              <td><%= board.servicestatus %></td>     
              <td><%= board.logs.count %></td>
              <td><%= board.updated_at %></td> 
              </td>
            </tr>
        <% end %>
        
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="well">
<%= link_to "New Board", new_board_path, class: "btn btn-default " %>
</div>


 
<% case params[:animal]
when "dog" %>
<p>Barf!</p>
<% when "cat" %>
<p>Meow!</p>
<% end %>